                    <select class="form-control" id="selectHost" required>
                        <option value="">Choose LeaveType</option>
                        <option value="1">Paid Leave</option>
                        <option value="2">Unpaid Leave</option>
                        <option value="2">Maternity Leave</option>
                        <option value="2">Paternity Leave</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10 col-sm-offset-2">
                    <button class="btn btn-primary" id="btnSave" type="submit">Save</button>
                    <button class="btn btn-default" id="btnCancel" type="button">Cancel</button>
                </div>
            </div>
        </form>
    </div>
